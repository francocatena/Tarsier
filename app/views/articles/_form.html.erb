<%= simple_form_for(@article) do |f| %>
  <div class="inputs">
    <div class="row">
      <div class="span8">
        <%= f.input :code, input_html: { autofocus: true, maxlength: 255 } %>
        <%= f.input :name, input_html: { maxlength: 255 } %>
        <%= f.input :price, input_html: { maxlength: 15 } %>
        <%= f.input :auto_brand, input_html: {
          :class => 'autocomplete',
          'data-autocomplete-url' => brands_path
        } %>
        <%= f.input :tag_list %>
      </div>
      <div class="span8">
        <%= f.input :description, input_html: { rows: 5 } %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.input :lock_version, as: :hidden %>
    <%= f.button :submit, class: 'primary' %>
    <div class="secondary-action"><%= yield :form_actions %></div>
  </div>
<% end %>
