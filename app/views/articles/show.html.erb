<div class="readonly_data">
  <h2><%= @article %></h2>
  
  <p>
    <b><%= Article.human_attribute_name 'price' %>:</b>
    <%= @article.price %>
  </p>

  <p>
    <b><%= Article.human_attribute_name 'description' %>:</b>
  </p>
  <%= simple_format @article.description %>

  <p>
    <b><%= Article.human_attribute_name 'brand' %>:</b>
    <%= @article.brand %>
  </p>
</div>

<nav class="actions">
  <%= link_to t('label.edit'), edit_article_path(@article), class: 'btn primary' %>
  <div class="secondary-action">
    <%= link_to t('label.list'), articles_path %>
  </div>
</nav>
