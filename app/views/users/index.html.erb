<table class="zebra-striped">
  <thead>
    <tr>
      <th><%= User.human_attribute_name 'name' %></th>
      <th><%= User.human_attribute_name 'lastname' %></th>
      <th><%= User.human_attribute_name 'email' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to t('label.show'), user %></td>
        <td><%= link_to t('label.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('label.delete'), user,
          confirm: t('messages.confirmation'), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="links">
  <%= pagination_links(@users) %>
  <%= link_to t('label.new'), new_user_path %>
</nav>